<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fancy.customwidget.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片背景验证码:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <com.fancy.customwidget.widget.ValidText
            android:id="@+id/valid1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="@drawable/background"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入上图中的验证码:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edit1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:background="@drawable/btn_bg"
            android:onClick="varifyText1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色背景验证码(点击可切换):"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <com.fancy.customwidget.widget.ValidText
            android:id="@+id/valid2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="#e0e3e4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入上图中的验证码:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edit2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:background="@drawable/btn_bg"
            android:onClick="varifyText2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击按钮切换验证码:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <com.fancy.customwidget.widget.ValidText
            android:id="@+id/valid3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="#FFF000"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/changeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一张"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入上图中的验证码:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edit3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:background="@drawable/btn_bg"
            android:onClick="varifyText3"
            />
    </LinearLayout>



</LinearLayout>
